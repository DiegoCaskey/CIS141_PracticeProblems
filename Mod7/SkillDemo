# Define character creation function
def char_gen(name, job, lvl, hp):
    return f"{name} - Class: {job}, Level: {lvl}, Health: {hp}"

# Generate stats for Warrior
formatted_stats = char_gen("Link", "Knight", 100, 3)
print(formatted_stats) #DONOTALTER

# Generate stats for Mage
formatted_stats = char_gen("Merlin", "Mage", 12, 120)
print(formatted_stats) #DONOTALTER

# Generate stats for Rogue
formatted_stats = char_gen("Ezio", "Rogue", 8, 100)
print(formatted_stats) #DONOTALTER
